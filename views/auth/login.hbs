<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Login</a></li>
                <li class="tab col s6"><a href="#register">Register</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}
            <h2>Login Page</h2>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input name="email" id="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Input Email"></span>
                </div>
                <div class="input-field">
                    <input name="password" id="password" type="password" class="validate" required min="1">
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Input password"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">
                <p><a href="/auth/reset">Forgot password?</a></p>
                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}
            <h2>Register Page</h2>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input name="email" id="remail" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Input Email"></span>
                </div>
                <div class="input-field">
                    <input name="password" id="rpassword" type="password" class="validate" required min="1">
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Input password"></span>
                </div>
                <div class="input-field">
                    <input name="confirm" id="confirm" type="password" class="validate" required min="1">
                    <label for="confirm">Password Confirmation</label>
                    <span class="helper-text" data-error="Input password"></span>
                </div>
                <div class="input-field">
                    <input name="name" id="name" type="text" class="validate" required min="1">
                    <label for="name">Your Name</label>
                    <span class="helper-text" data-error="Input name"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button class="btn btn-primary" type="submit">Register</button>
            </form>
        </div>
    </div>
</div>