<h1>Profile</h1>

<div class="row">
    <div class="cos s6">
        {{#if user.avatarUrl}}
            <img style="width: 300px; height: auto;" class="avatar" src="/{{user.avatarUrl}}" alt="avatar-{{user-name}}">
        {{else}}
            <p>no image</p>
        {{/if}}
    </div>
    <div class="cos s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Your email: <strong>{{user.email}}</strong></p>
            <div class="input-field">
                <input name="name" id="name" type="text" class="validate" required value="{{user.name}}">
                <label for="name">Enter Name</label>
                <span class="helper-text" data-error="Input name"></span>
            </div>

            <div class="file-input input-field">
                <div class="btn">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-ath validate" type="text">
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button type="submit" class="btn btn-primary">Change</button>
        </form>
    </div>
</div>