<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Title Name</label>
        <span class="helper-text" data-error="Input title"></span>
    </div>
    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Input price"></span>
    </div>
    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">IMG URL</label>
        <span class="helper-text" data-error="Input URL"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}" />
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button type="submit" class="btn btn-primary">Edit</button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <input type="hidden" name="id" value="{{ course.id }}" />
    <button class="btn red">Delete Course</button>
</form>