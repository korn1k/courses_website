<h1>Add</h1>
{{#if error}}
<p class="alerts">{{error}}</p>
{{/if}}
<form action="/add" method="POST">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Title Name</label>
        <span class="helper-text" data-error="Input title"></span>
    </div>
    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" required min="1" value="{{data.price}}">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Input price"></span>
    </div>
    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" required value="{{data.img}}">
        <label for="img">IMG URL</label>
        <span class="helper-text" data-error="Input URL"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary">Add course</button>
</form>